<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorNeutralDark</item>
        <item name="android:textColorPrimary">@color/colorNeutralLight</item>
        <item name="android:textColorPrimaryInverse">@color/colorNeutralDark</item>
    </style>

    <style name="ActivityTab" parent="AppTheme">
        <item name="background">@drawable/selectable_tab_color</item>
        <item name="android:textColor">@color/colorNeutralLight</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="LibraryList" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorNeutralLight</item>
    </style>

    <style name="PageItemContainer" parent="AppTheme">
       <item name="android:padding">10dp</item>
    </style>

    <style name="PageItemImage" parent="AppTheme"></style>

    <style name="PageItemText" parent="AppTheme">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
       <!--  <item name="android:stateListAnimator">@animator/selectable_text</item> -->
     </style>

    <style name="PageItemText.Light" parent="PageItemText">
        <item name="android:background">@drawable/selectable_text_bkgd</item>
        <item name="android:textColor">@color/selectable_text</item>
    </style>

    <style name="PageItemLink" parent="AppTheme">

    </style>

    <style name="ActionBar" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppThemeMint" parent="Theme.AppCompat" />

<!-- todo: -L- outlineProvider ? -->
    <style name="Tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selectable_tab_color</item>
        <item name="android:padding">20dp</item>
        <item name="android:radius">1dp</item>
         <item name="android:textColor">@color/selectable_item</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DarkTextItem">
        <item name="android:padding">1dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/colorNeutralLight</item>
    </style>

    <style name="DarkTextItem.Headline" parent="DarkTextItem">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PageItemContainer.Light" parent="PageItemContainer">
        <item name="android:background">@color/colorNeutralShade</item>
      </style>


</resources>
